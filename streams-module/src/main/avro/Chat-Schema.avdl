@namespace("io.confluent.ps.streams.referenceapp.chat.model")
protocol Xenzone {

  record GoalId {
    string id;
  }

  record UserId {
    string id;
  }

  enum ReviewedStatus {
    YES, NO
  }

  record GoalEvent {
    GoalId id;
    string title;
    int score;
    int initialScore;
    timestamp_ms createdAt;
    UserId userId;
    ReviewedStatus reviewedStatus;
    int goalProgressionSteps;
    int significantProgressSurpassedAtStep;
  }

  record UserAccess {
    UserId userId;
    int accessCount;
    timestamp_ms accessTime;
  }

  record ChatMessage {
    UserId userId;
    timestamp_ms accessTime;
    string message;
  }

  record TranscriptId {
    string id;
  }

  record Transcript {
    TranscriptId id;
    array<ChatMessage> messages = [];
  }

  record MucRoomId {
    string id;
  }

  record MucRoom {
    string id;
    string application_id;
    string xmpp_room_id;
    UserId participantOne;
    UserId participantTwo;
    timestamp_ms started_at;
    timestamp_ms ended_at;
    boolean active;
  }

  enum JabberMessageBoxType {
    mailboxconversation, worker
  }

  record JabberMessageBox {
    string id;
    JabberMessageBoxType mailboxType;
  }

  record JabberMessage {
    string messageType;
    JabberMessageBox to;
    JabberMessageBox from;
    timestamp_ms sentAt;
  }

  record User {}
}